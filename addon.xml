<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon
    id="script.XBTV.xml"
	version="0.0.5"
	name="XBTVxml"
	provider-name="Jason Anderson">

	<requires>
		<import addon="xbmc.python" version="1.0"/>
	</requires>

	<extension point="xbmc.python.script"
        defaultresolution="720p"
        defaultresolutionwide="720p"
		library="default.py"/>

	<extension point="xbmc.addon.metadata">
		<platform>all</platform>
		<minversion>28764</minversion>
		<summary>XBTV script by Jason Anderson</summary>
		<description>XBTV acts similar to normal broadcast or cable TV, complete with multiple user-defined channels and an EPG.</description>
	</extension>
</addon>
